generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Plan {
  FREE
  SINGLE
  MONTHLY
  LIFETIME
}

enum GenerationStatus {
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id            String    @id @default(cuid())
  firebaseUid   String    @unique
  email         String?   @unique
  name          String?
  plan          Plan      @default(FREE)
  exportsUsed   Int       @default(0)
  exportsLimit  Int       @default(0)
  subscriptionEnd DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  resumeSources  ResumeSource[]
  jobDescriptions JobDescription[]
  generations    Generation[]
}

model ResumeSource {
  id          String   @id @default(cuid())
  userId      String
  filename    String
  rawText     String
  parsedJson  Json?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  generations Generation[]
}

model JobDescription {
  id          String   @id @default(cuid())
  userId      String
  rawText     String
  parsedJson  Json?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  generations Generation[]
}

model Generation {
  id              String           @id @default(cuid())
  userId          String
  resumeSourceId  String
  jobDescriptionId String
  templateSlug    String
  status          GenerationStatus @default(PROCESSING)
  tailoredJson    Json?
  matchScore      Int?
  matchedKeywords String[]
  missingKeywords String[]
  shareSlug       String?          @unique
  pdfUrl          String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  resumeSource   ResumeSource   @relation(fields: [resumeSourceId], references: [id])
  jobDescription JobDescription @relation(fields: [jobDescriptionId], references: [id])
}
